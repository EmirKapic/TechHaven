                <div class="d-flex">
                    <div>
                        <span class="me-1">Količina:</span>
                        <div class="btn-group me-2" style="width: 120px;">
                            <button type="button" class="btn btn-outline-secondary">-</button>
                            <input type="text" class="form-control" placeholder="1">
                            <button type="button" class="btn btn-outline-secondary">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4 d-flex gap-2">
                <a id ="addToCartBtn" class="btn btn-primary d-flex align-items-center">
