@model Product

<div class="container my-4">
    <h2 class="text-center">Product details</h2>
    <hr class="mb-4" />
    <div class="row">

        <div class="col-12 col-lg-6">
            <img src="https://placehold.co/600x400" class="img-fluid border border-secondary-subtle rounded w-100" />
        </div>

        <div class="col-12 col-lg-6 d-flex flex-column justify-content-between">
            <div>
                <h3 class="mt-3 mt-lg-0 mb-3">@Model.Manufacturer @Model.Model</h3>
                <div class="mb-3">
                    <span class="h5">@Model.Price KM</span>
                    <span class="text-muted">/po proizvodu</span>
                </div>
