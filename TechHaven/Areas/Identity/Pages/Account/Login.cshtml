@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h5>Log in</h5>
<div class="container">
    <form method="post" class="d-flex flex-column">
        <input asp-for="Input.Email" placeholder="Email" type="text" />
        <input asp-for="Input.RememberMe" value="@false" type="hidden"/>
        <input asp-for="Input.Password" placeholder="Password" type="password" />

        <button class="btn btn-primary" type="submit">Log in!</button>
        <a class="btn btn-warning" type="button" asp-page="./Register"> Register </a>
    </form>

</div>